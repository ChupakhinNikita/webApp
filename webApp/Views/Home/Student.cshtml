@model webApp.Models.StudentJSON
@{
    ViewData["Title"] = "Студент";
}

@section Header {
    <div class="header_section">
        <div class="header_logo">
            <img src="~/img/vstu-logo.svg" alt="">
        </div>
        <div class="header_title">
            <div class="header_divider"> </div>
            <div class="header_portal_title">
                <p>ОБРАЗОВАТЕЛЬНЫЙ ПОРТАЛ ВОРОНЕЖСКОГО ГОСУДАРСТВЕННОГО ТЕХНИЧЕСКОГО УНИВЕРСИТЕТА</p>
            </div>
        </div>
    </div>
    <div class="header_section">
        <div class="header_account">
            <img src="~/img/account.svg" alt="">
        </div>
    </div>
}

@section nav {
        <nav>
        <div class="navbar_section">
            <div class="navbar_buttons">
                <a href="#">Расписание</a>
                <div class="navbar_button_divider"></div>
                <a asp-action="RecordBook" asp-controller="Home">Зачетная книжка</a>
                <div class="navbar_button_divider"></div>
                <a href="#">Учебные планы</a>
                <div class="navbar_button_divider"></div>
                <a href="#">Моя группа</a>
                <div class="navbar_button_divider"></div>
                <a href="#">Расписание</a>
                <div class="navbar_button_divider"></div>
                <a href="#">Портфолио</a>
                <div class="navbar_button_divider"></div>
                <a asp-action="Orders" asp-controller="Home">Приказы</a>
            </div>
            <div class="navbar_buttons">
                <a href="#">Помощь</a>
                <div class="navbar_button_divider"></div>
                <a href="#">Настройки</a>
                <div class="navbar_button_divider"></div>
                <a asp-action="Logout" asp-controller="Account">Выйти</a>
            </div>
        </div>
    </nav>
}

<div class="main_left_section">
    <div class="navigation">
        <p>Навигация</p>
    </div>
    <div class="navigation_divider"></div>
    <a asp-action="Student" asp-controller="Home">
        <div class="navigation_button">На главную страницу</div>
    </a>
</div>
<div class="main_right_section">
    <div class="main_right_top_student_info">
        <div>
            Информация о студенте
        </div>
    </div>

    <div class="main_right_top_student_FIO">
        <div class="main_right_top_account">
            <img src="~/img/account.svg" alt="">
        </div>
        <div>
            @Model.LastName @Model.FirstName @Model.Patronomic @Model.Group
        </div>
    </div>

    <div class="main_right_bottom_section">
        <div class="student_info">
            <div class="student_info_field">@Model.Gradebook</div>
            <p>Номер зачетной книжки</p>
            <div class="student_info_field">@Model.Faculty</div>
            <p>Факультет</p>
            <div class="student_info_field">@Model.Speciality</div>
            <p>Направление подготовки/Специальность</p>
            <div class="student_info_field">@Model.Specialization</div>
            <p>Профиль/Специализация</p>
            <div class="student_info_field">@Model.Course</div>
            <p>Курс</p>      
        </div>
        <div class="student_info">
            <div class="student_info_field">@Model.TrainingLevel</div>
            <p>Уровень образования</p>
            <div class="student_info_field">@Model.TuitionType</div>
            <p>Основание обучения</p>
            <div class="student_info_field">@Model.FormEducation</div>
            <p>Форма обучения</p>
            <div class="student_info_field">@Model.StudentCondition</div>
            <p>Статус студента</p>
            <div class="student_info_field">@Model.IdStudent</div>
            <p>Уникальный идентификатор студента</p>
        </div>
    </div>
</div>